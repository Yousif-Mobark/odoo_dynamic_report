<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Report Template Tree View -->
    <record id="view_report_template_tree" model="ir.ui.view">
        <field name="name">report.template.tree</field>
        <field name="model">report.template</field>
        <field name="arch" type="xml">
            <tree string="Report Templates">
                <field name="name"/>
                <field name="model_id"/>
                <field name="usage_count"/>
                <field name="last_used_date"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Report Template Form View -->
    <record id="view_report_template_form" model="ir.ui.view">
        <field name="name">report.template.form</field>
        <field name="model">report.template</field>
        <field name="arch" type="xml">
            <form string="Report Template">
                <header>
                    <button name="action_preview" string="Preview" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('template_data', '=', False)]}"/>
                    <button name="action_download_template" string="Download Template" 
                            type="object" attrs="{'invisible': [('template_data', '=', False)]}"/>
                    <button name="action_parse_template" string="Parse Template" 
                            type="object" attrs="{'invisible': [('template_data', '=', False)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., Custom Invoice Template"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="model_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="model_name" invisible="1"/>
                            <field name="paper_format_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="usage_count" readonly="1"/>
                            <field name="last_used_date" readonly="1"/>
                            <field name="report_action_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Template File">
                        <field name="template_data" filename="template_filename" 
                               widget="binary" string="Upload DOCX Template"/>
                        <field name="template_filename" invisible="1"/>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Describe what this template is used for..."/>
                    </group>
                    <notebook>
                        <page string="Field Mappings" name="field_mappings">
                            <field name="field_mapping_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="field_name"/>
                                    <field name="field_path"/>
                                    <field name="field_type"/>
                                    <field name="format_string"/>
                                    <field name="default_value"/>
                                    <field name="is_required"/>
                                    <button name="action_test_field" string="Test" type="object" icon="fa-play"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Advanced" name="advanced">
                            <group>
                                <field name="field_mappings" widget="ace" options="{'mode': 'json'}" 
                                       string="Field Mappings JSON"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Report Template Search View -->
    <record id="view_report_template_search" model="ir.ui.view">
        <field name="name">report.template.search</field>
        <field name="model">report.template</field>
        <field name="arch" type="xml">
            <search string="Report Templates">
                <field name="name" string="Template Name"/>
                <field name="model_id" string="Model"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Recently Used" name="recently_used" 
                        domain="[('last_used_date', '!=', False)]" 
                        context="{'order_by': 'last_used_date desc'}"/>
                <filter string="Most Used" name="most_used" 
                        domain="[('usage_count', '>', 0)]" 
                        context="{'order_by': 'usage_count desc'}"/>
                <group expand="0" string="Group By">
                    <filter string="Model" name="group_by_model" context="{'group_by': 'model_id'}"/>
                    <filter string="Company" name="group_by_company" context="{'group_by': 'company_id'}" 
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Report Template Action -->
    <record id="action_report_template" model="ir.actions.act_window">
        <field name="name">Report Templates</field>
        <field name="res_model">report.template</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first dynamic report template
            </p>
            <p>
                Design professional reports without programming!<br/>
                Upload a DOCX template, select fields, and start generating custom reports.
            </p>
        </field>
    </record>

    <!-- Field Mapping Tree View -->
    <record id="view_report_field_mapping_tree" model="ir.ui.view">
        <field name="name">report.field.mapping.tree</field>
        <field name="model">report.field.mapping</field>
        <field name="arch" type="xml">
            <tree string="Field Mappings" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="field_name"/>
                <field name="field_path"/>
                <field name="field_type"/>
                <field name="format_string"/>
                <field name="default_value"/>
                <field name="is_required"/>
                <field name="placeholder" readonly="1"/>
            </tree>
        </field>
    </record>

</odoo>
